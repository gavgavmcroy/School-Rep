<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>


<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="textField" GridPane.rowIndex="0" GridPane.columnIndex="0"
               onKeyReleased="#handleKeyReleased"/>
    <Button GridPane.rowIndex="1" GridPane.columnIndex="0" text="Click me pls"
            onAction="#onButtonClick" fx:id="buttonClick"/>
    <Button GridPane.rowIndex="2" GridPane.columnIndex="0" text="pls close me"
            onAction="#onButtonClick" fx:id="buttonClose"/>
    <CheckBox text="Clear " GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="checkBox"
    onAction="#handleChange"/>
    <Label text="Tricky G " fx:id="label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
</GridPane>