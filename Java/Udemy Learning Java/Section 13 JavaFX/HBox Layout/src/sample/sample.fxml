<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>

<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="This label is in the top position " BorderPane.alignment="center"
               style="-fx-border-color: green; -fx-border-width: 3; -fx-border-style: dashed"/>
    </top>
    <center>
        <Label text="This label is in the center and has really obnoxiously long text"
        BorderPane.alignment="center"
               style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"/>
    </center>
    <left>
        <Label text="This label is in the left position" BorderPane.alignment="top_center"
               style="-fx-border-color: purple; -fx-border-width: 3; -fx-border-style: dashed"/>
    </left>
    <right>
        <Label text="This label is in the left position" BorderPane.alignment="top_center"
               style="-fx-border-color: orange; -fx-border-width: 3; -fx-border-style: dashed"/>
    </right>
    <bottom>
        <HBox style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed"
              spacing="10" alignment="center">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>
</BorderPane>

